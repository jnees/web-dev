<!-- Header -->
<%- include partials/header -%>

<!-- Display Posts -->
<% allPosts.forEach(function(post){ %>
  <h1><%= post.title %></h1>
  <p><%= post.content.substring(0, 100) + "..." %></p>
  <a href="/posts/<%= post._id %>" >Read More</a>
<% }); %>

<!-- Pagination -->
<nav>
  <ul class="pagination">
    <% for(i=0; i < pages; i++){ %>
      <% var classList = "page-item"; %>
      <% if(i=== pageRequested - 1){ %>
        <% classList = "active page-item"; %>
        <li class=<%= classList %> id="<%= (i + 1) %>">
        <% } else { %>
          <li class="page-item" id="<%= (i + 1) %>">
        <% } %>
        <a class="page-link" href="<%= "/" + (i + 1) %>">
          <%= (i + 1)  %>
        </a>
      </li>
    <% } %>
  </ul>
</nav>

